{
  "name": "heroku-api",
  "version": "0.0.2",
  "description": "heroku ready to deploy nest-api",
  "author": "rafael marcilio",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "postinstall": "tsc",
    "start": "node dist/main.js",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.3.5",
    "@nestjs/core": "^5.3.4",
    "@nestjs/websockets": "^5.3.1",
    "fastify-formbody": "^2.0.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.3.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "@types/supertest": "^2.0.6",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.0.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "engines": {
    "node": "10.9.0",
    "npm": "6.2.0"
  }
}
